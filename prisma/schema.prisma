generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Party {
  id         String   @id @default(uuid())
  firstName  String
  secondName String
  mobile1    String
  mobile2    String?
  email      String   @unique
  address    String
  status     String
  type       String

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tasks      Task[]   // One-to-many: Party has many Tasks
}

model Task {
  id             String       @id @default(uuid())
  jobDescription String
  priority       Priority
  notifyVia      NotifyMethod

  partyId        String
  party          Party        @relation(fields: [partyId], references: [id])

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Visit {
  id        String   @id @default(uuid())
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Priority {
  NORMAL
  HIGH
  LOW
}

enum NotifyMethod {
  SMS
  WA
  EMAIL
}
